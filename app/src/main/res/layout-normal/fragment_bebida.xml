<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.baryapp.baryapp.fragments.Bebida"
    android:background="@color/fondo_principal">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/encabezadoBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margen_sup_texto_selects">

        <ImageView
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_prev"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/texto_sup"
            android:text="@string/tipo_bebida"
            android:textColor="@color/blanco"
            android:textSize="@dimen/size_text_bar_o_disco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/prev"
            android:layout_toLeftOf="@+id/next"/>

        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_next"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/cerveza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_cerveza"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/encabezadoBar"
        android:layout_marginTop="@dimen/margen_sup_img_selects"/>

    <ImageView
        android:id="@+id/coctel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_coctel"
        android:layout_below="@+id/cerveza"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margen_sup_img_selects"/>

</RelativeLayout>
