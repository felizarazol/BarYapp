<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.baryapp.baryapp.fragments.Precios"
    android:background="@color/fondo_principal">

    <RelativeLayout
        android:id="@+id/encabezadoBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margen_sup_texto_selects">

        <ImageView
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_prev"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/texto_sup"
            android:text="@string/precios"
            android:textColor="@color/blanco"
            android:textSize="@dimen/size_text_bar_o_disco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/prev"
            android:layout_toLeftOf="@+id/next"/>

        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_next"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/encabezadoBar">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btBajo"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/menor_precio"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btMedio"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/precio_medio"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btAlto"
            android:layout_row="1"
            android:layout_column="3"
            android:src="@drawable/mayor_precio"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtBajo"
            android:layout_row="2"
            android:layout_column="1" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMedio"
            android:layout_row="2"
            android:layout_column="2" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAlto"
            android:layout_row="2"
            android:layout_column="3" />
    </GridLayout>

</RelativeLayout>
